<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:label="fragment_register"
        android:name="com.otus.securehomework.presentation.auth.LoginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationBiometricFragment"
            app:destination="@id/registrationBiometricFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:label="fragment_register"
        android:name="com.otus.securehomework.presentation.auth.RegisterFragment"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/registrationBiometricFragment"
        android:label="fragment_register"
        android:name="com.otus.securehomework.presentation.auth.RegisterBiometricFragment"
        tools:layout="@layout/fragment_register_biomeric" >
        <action
            android:id="@+id/action_registrationBiometricFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>